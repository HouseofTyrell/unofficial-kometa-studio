{
  "name": "unofficial-kometa-studio",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "A modern, local-first IDE for creating and managing Kometa configurations with visual overlay builder, profile management, and secure secret handling",
  "repository": {
    "type": "git",
    "url": "https://github.com/HouseofTyrell/unofficial-kometa-studio.git"
  },
  "bugs": {
    "url": "https://github.com/HouseofTyrell/unofficial-kometa-studio/issues"
  },
  "homepage": "https://github.com/HouseofTyrell/unofficial-kometa-studio#readme",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter @kometa-studio/server start",
    "test": "pnpm -r test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r clean"
  },
  "keywords": [
    "kometa",
    "plex",
    "plex-meta-manager",
    "config",
    "ide",
    "overlay",
    "metadata",
    "tmdb",
    "visual-editor"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^9.17.0",
    "@eslint/js": "^9.17.0",
    "typescript-eslint": "^8.18.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.3.3"
  }
}
